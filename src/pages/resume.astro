---
/**
 * Resume page — dynamically rendered with terminal design.
 * All data from content collections and profile.
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { Download, ExternalLink } from "@lucide/astro";
import profile from "../data/profile";

const experiences = (await getCollection("experience")).sort((a, b) => {
  const aDate = a.data.endDate || new Date();
  const bDate = b.data.endDate || new Date();
  return new Date(bDate).getTime() - new Date(aDate).getTime();
});

const certifications = (await getCollection("certifications")).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);

const projects = (await getCollection("projects"))
  .filter((p) => p.data.featured)
  .sort(
    (a, b) =>
      new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
  );

const formatDate = (d: Date) =>
  new Date(d).toLocaleDateString("en-US", {
    month: "short",
    year: "numeric",
  });

---

<BaseLayout
  title={`Resume – ${profile.name} | Frontend / Web Developer`}
  description={`Resume and CV of ${profile.name}, ${profile.title} based in ${profile.location}`}
  canonical="/resume"
  keywords="web developer resume, frontend developer, remote developer for hire"
>
  <article class="c-section">
    <div class="c-container max-w-4xl">
      <!-- Header -->
      <div class="mb-12 pb-8 border-b-2 border-[var(--border-default)]">
        <h1 class="font-pixel text-xl sm:text-2xl md:text-3xl mb-3 text-[var(--text-primary)]">
          {profile.name}
        </h1>
        <p class="font-heading text-lg text-[var(--accent)] font-semibold mb-4">
          {profile.title}
        </p>
        <div
          class="flex flex-col md:flex-row gap-3 md:gap-6 font-mono text-xs text-[var(--text-muted)]"
        >
          <a
            href={`mailto:${profile.contact.email}`}
            class="hover:text-[var(--accent)] transition-colors"
          >
            {profile.contact.email}
          </a>
          <a
            href={`tel:${profile.contact.phone.replace(/\s/g, "")}`}
            class="hover:text-[var(--accent)] transition-colors"
          >
            {profile.contact.phone}
          </a>
          <span>{profile.location}</span>
          <a
            href={profile.social.github}
            class="hover:text-[var(--accent)] transition-colors"
          >
            github.com/kjorken
          </a>
          <a
            href={profile.social.linkedin}
            class="hover:text-[var(--accent)] transition-colors"
          >
            linkedin.com/in/kjdutaro
          </a>
        </div>
      </div>

      <!-- Professional Summary -->
      <section class="mb-10">
        <h2 class="font-heading text-xl font-bold mb-4 text-[var(--text-primary)] flex items-center gap-2">
          <span class="text-[var(--accent)]" aria-hidden="true">&gt;</span>
          Professional Summary
        </h2>
        <div class="text-[var(--text-muted)] leading-relaxed text-sm space-y-3">
          <p class="mb-0">{profile.bio[0]}</p>
          <p class="mb-0">{profile.bio[1]}</p>
          <p class="mb-0">{profile.bio[3]}</p>
        </div>
      </section>

      <!-- Core Competencies -->
      <section class="mb-10">
        <h2 class="font-heading text-xl font-bold mb-4 text-[var(--text-primary)] flex items-center gap-2">
          <span class="text-[var(--accent)]" aria-hidden="true">&gt;</span>
          Core Competencies
        </h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="p-4 border-2 border-[var(--border-default)] bg-[var(--bg-surface)]">
            <h3 class="font-heading font-semibold text-[var(--text-primary)] mb-3 text-sm">
              Technologies
            </h3>
            <div class="flex flex-wrap gap-2">
              {
                [
                  ...profile.skills.languages,
                  ...profile.skills.frameworks,
                ].map((skill) => (
                  <span class="font-mono text-xs px-2 py-0.5 bg-[var(--bg-elevated)] text-[var(--accent)] border border-[var(--border-default)]">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
          <div class="p-4 border-2 border-[var(--border-default)] bg-[var(--bg-surface)]">
            <h3 class="font-heading font-semibold text-[var(--text-primary)] mb-3 text-sm">
              Tools & Specializations
            </h3>
            <div class="flex flex-wrap gap-2">
              {
                [
                  ...profile.skills.tools,
                  ...profile.skills.specializations.slice(0, 4),
                ].map((skill) => (
                  <span class="font-mono text-xs px-2 py-0.5 bg-[var(--bg-elevated)] text-[var(--accent)] border border-[var(--border-default)]">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
        </div>
      </section>

      <!-- Professional Experience -->
      <section class="mb-10">
        <h2 class="font-heading text-xl font-bold mb-6 text-[var(--text-primary)] flex items-center gap-2">
          <span class="text-[var(--accent)]" aria-hidden="true">&gt;</span>
          Professional Experience
        </h2>
        {
          experiences.map((exp) => (
            <div class="mb-8 pl-4 border-l-2 border-[var(--accent)]">
              <div class="flex flex-wrap justify-between items-start gap-2 mb-2">
                <h3 class="font-heading text-base font-semibold text-[var(--text-primary)]">
                  {exp.data.title}
                </h3>
                <span class="font-mono text-xs text-[var(--text-muted)]">
                  {formatDate(exp.data.startDate)} –{" "}
                  {exp.data.endDate
                    ? formatDate(exp.data.endDate)
                    : "Present"}
                </span>
              </div>
              <p class="font-mono text-xs text-[var(--text-muted)] mb-3">
                {exp.data.company}
              </p>
              <p class="text-sm text-[var(--text-muted)] leading-relaxed">
                {exp.data.description}
              </p>
            </div>
          ))
        }
      </section>

      <!-- Certifications -->
      <section class="mb-10">
        <h2 class="font-heading text-xl font-bold mb-4 text-[var(--text-primary)] flex items-center gap-2">
          <span class="text-[var(--accent)]" aria-hidden="true">&gt;</span>
          Certifications & Credentials
        </h2>
        <div class="space-y-3">
          {
            certifications.map((cert) => (
              <div class="border-l-2 border-[var(--accent)] pl-4">
                <div class="flex items-center gap-2 flex-wrap">
                  {cert.data.credentialUrl ? (
                    <a
                      href={cert.data.credentialUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="font-heading font-semibold text-[var(--text-primary)] hover:text-[var(--accent)] transition-colors text-sm inline-flex items-center gap-1"
                    >
                      {cert.data.title}
                      <ExternalLink size={12} aria-hidden="true" />
                    </a>
                  ) : (
                    <p class="font-heading font-semibold text-[var(--text-primary)] mb-0 text-sm">
                      {cert.data.title}
                    </p>
                  )}
                </div>
                <p class="font-mono text-xs text-[var(--text-muted)] mb-0">
                  {cert.data.issuer} &bull; {formatDate(cert.data.date)}
                </p>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Notable Projects -->
      {
        projects.length > 0 && (
          <section class="mb-10">
            <h2 class="font-heading text-xl font-bold mb-4 text-[var(--text-primary)] flex items-center gap-2">
              <span class="text-[var(--accent)]" aria-hidden="true">&gt;</span>
              Notable Projects
            </h2>
            <div class="space-y-4">
              {projects.map((project) => (
                <div class="p-4 border-2 border-[var(--border-default)] bg-[var(--bg-surface)] hover:border-[var(--accent)] transition-colors">
                  <div class="flex items-center gap-2">
                    <p class="font-heading font-semibold text-[var(--text-primary)] mb-0 text-sm">
                      {project.data.title}
                    </p>
                    {project.data.liveLink && (
                      <a
                        href={project.data.liveLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-[var(--accent)] hover:text-[var(--accent-hover)]"
                      >
                        <ExternalLink size={14} aria-hidden="true" />
                      </a>
                    )}
                  </div>
                  <p class="text-sm text-[var(--text-muted)] mb-1">
                    {project.data.description}
                  </p>
                  <p class="font-mono text-xs text-[var(--text-subtle)] mb-0">
                    Tech: {project.data.tech.join(", ")}
                  </p>
                </div>
              ))}
            </div>
          </section>
        )
      }

      <!-- Download -->
      <section
        class="mt-12 pt-8 border-t-2 border-[var(--border-default)]"
      >
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/resume.pdf" download class="c-btn c-btn-primary h-11 px-6">
            <Download size={18} aria-hidden="true" />
            Download as PDF
          </a>
        </div>
      </section>
    </div>
  </article>
</BaseLayout>
