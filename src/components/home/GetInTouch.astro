---
import { Mail, Phone, Github, Linkedin } from '@lucide/astro';
---
---

<section id="get-in-touch" class="py-16 md:py-20 px-4 md:px-8 max-w-5xl mx-auto">
    <h2 class="text-3xl font-heading font-bold text-accent mb-12">Get In Touch</h2>
    
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Direct Contact -->
      <div>
        <h3 class="text-xl font-heading font-semibold mb-6">Direct Contact</h3>
        <p class="text-zinc-600 dark:text-zinc-400 mb-6 font-body">Reach me directly via email or phone</p>
        
        <div class="space-y-4">
          <a 
            href="mailto:kjdutaro@gmail.com"
            class="flex items-center gap-4 p-4 rounded-lg border border-accent/20 dark:border-accent/30 hover:border-accent hover:bg-accent/5 dark:hover:bg-accent/10 transition-all duration-300"
          >
            <Mail size={24} class="text-accent shrink-0" aria-hidden="true" />
            <div>
              <p class="text-sm text-zinc-600 dark:text-zinc-400 font-body">Email</p>
              <p class="font-semibold text-zinc-900 dark:text-zinc-100 font-heading">kjdutaro@gmail.com</p>
            </div>
          </a>

          <a 
            href="tel:+639561793552"
            class="flex items-center gap-4 p-4 rounded-lg border border-accent/20 dark:border-accent/30 hover:border-accent hover:bg-accent/5 dark:hover:bg-accent/10 transition-all duration-300"
          >
            <Phone size={24} class="text-accent shrink-0" aria-hidden="true" />
            <div>
              <p class="text-sm text-zinc-600 dark:text-zinc-400 font-body">Phone</p>
              <p class="font-semibold text-zinc-900 dark:text-zinc-100 font-heading">+63 956 179 3552</p>
            </div>
          </a>

          <div class="pt-4 border-t border-neutral-200 dark:border-neutral-800">
            <p class="text-sm text-zinc-600 dark:text-zinc-400 mb-4">Connect on social media:</p>
            <div class="flex gap-4">
              <a href="https://github.com/kjdutaro" target="_blank" rel="noopener noreferrer" class="p-2 rounded-lg border border-accent/20 dark:border-accent/30 hover:border-accent hover:bg-accent/5 dark:hover:bg-accent/10 transition-colors" aria-label="GitHub">
                <Github size={20} class="text-accent" aria-hidden="true" />
              </a>
              <a href="https://linkedin.com/in/kjdutaro" target="_blank" rel="noopener noreferrer" class="p-2 rounded-lg border border-accent/20 dark:border-accent/30 hover:border-accent hover:bg-accent/5 dark:hover:bg-accent/10 transition-colors" aria-label="LinkedIn">
                <Linkedin size={20} class="text-accent" aria-hidden="true" />
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div>
        <h3 class="text-xl font-semibold mb-6">Send a Message</h3>
        <form id="contact-form" class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-medium mb-2">Name</label>
            <input 
              type="text" 
              id="name" 
              name="name"
              required
              class="w-full px-4 py-2 rounded-lg bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 text-zinc-900 dark:text-zinc-100 placeholder-zinc-500 dark:placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
              placeholder="Your name"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email"
              required
              class="w-full px-4 py-2 rounded-lg bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 text-zinc-900 dark:text-zinc-100 placeholder-zinc-500 dark:placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
              placeholder="your@email.com"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium mb-2">Subject</label>
            <input 
              type="text" 
              id="subject" 
              name="subject"
              required
              class="w-full px-4 py-2 rounded-lg bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 text-zinc-900 dark:text-zinc-100 placeholder-zinc-500 dark:placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
              placeholder="What's this about?"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium mb-2">Message</label>
            <textarea 
              id="message" 
              name="message"
              required
              rows="5"
              class="w-full px-4 py-2 rounded-lg bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 text-zinc-900 dark:text-zinc-100 placeholder-zinc-500 dark:placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors resize-none"
              placeholder="Tell me about your project..."
            ></textarea>
          </div>

          <button 
            type="submit"
            class="btn-primary w-full"
          >
            Send Message
          </button>

          <p id="form-status" class="text-sm text-center"></p>
        </form>
      </div>
    </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement | null;
  const statusElement = document.getElementById('form-status');

  if (form && statusElement) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = {
        name: formData.get('name') as string,
        email: formData.get('email') as string,
        subject: formData.get('subject') as string,
        message: formData.get('message') as string
      };

      try {
        statusElement.textContent = 'Sending...';
        statusElement.className = 'text-sm text-blue-600 dark:text-blue-400 text-center';

        // Send to Formspree - replace YOUR_FORM_ID with actual form ID
        const response = await fetch('https://formspree.io/f/myzwpkzp', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          statusElement.textContent = '✓ Message sent successfully! I\'ll get back to you soon.';
          statusElement.className = 'text-sm text-green-600 dark:text-green-400 text-center';
          form.reset();
          setTimeout(() => {
            statusElement.textContent = '';
          }, 5000);
        } else {
          throw new Error('Failed to send');
        }
      } catch (error) {
        statusElement.textContent = '✗ Error sending message. Please try emailing directly at kjdutaro@gmail.com';
        statusElement.className = 'text-sm text-red-600 dark:text-red-400 text-center';
      }
    });
  }
</script>
