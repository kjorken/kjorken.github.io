---
/**
 * GetInTouch — terminal-inspired contact section.
 * Contact info (tap to copy), monospace form inputs; fonts match site terminal aesthetic.
 */
import { Mail, Phone, Github, Linkedin } from "@lucide/astro";
import profile from "../../data/profile";
---

<section id="contact" aria-label="Contact" class="c-section">
  <div class="c-container">
    <p class="c-section-eyebrow">Say Hello</p>
    <h2 class="c-section-title">Get In Touch</h2>
    <p class="c-section-desc">
      Reach me by email or phone, or connect on GitHub and LinkedIn.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
      <!-- Contact info (tap to copy) -->
      <div class="space-y-4">
        <button
          type="button"
          data-copy={profile.contact.email}
          class="contact-copy w-full flex items-center gap-4 p-4 border-2 border-[var(--border-default)] bg-[var(--bg-surface)] hover:border-[var(--accent)] hover:shadow-[2px_2px_0_0_var(--accent)] transition-all text-left focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--focus-ring)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--bg-primary)] cursor-pointer"
          aria-label={`Copy email ${profile.contact.email}`}
        >
          <div class="w-10 h-10 flex items-center justify-center border-2 border-[var(--accent)] text-[var(--accent)] shrink-0">
            <Mail size={18} aria-hidden="true" />
          </div>
          <div class="min-w-0 flex-1">
            <p class="font-mono text-xs text-[var(--text-subtle)] mb-0 uppercase tracking-wider">Email <span class="normal-case opacity-70">(tap to copy)</span></p>
            <p class="font-medium text-[var(--text-primary)] mb-0 text-sm truncate">
              {profile.contact.email}
            </p>
          </div>
          <span class="contact-copy-feedback font-mono text-xs text-[var(--accent)] hidden" aria-live="polite">Copied!</span>
        </button>

        <button
          type="button"
          data-copy={profile.contact.phone.replace(/\s/g, "")}
          class="contact-copy w-full flex items-center gap-4 p-4 border-2 border-[var(--border-default)] bg-[var(--bg-surface)] hover:border-[var(--accent)] hover:shadow-[2px_2px_0_0_var(--accent)] transition-all text-left focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--focus-ring)] focus-visible:ring-offset-2 focus-visible:ring-offset-[var(--bg-primary)] cursor-pointer"
          aria-label={`Copy phone number ${profile.contact.phone}`}
        >
          <div class="w-10 h-10 flex items-center justify-center border-2 border-[var(--accent)] text-[var(--accent)] shrink-0">
            <Phone size={18} aria-hidden="true" />
          </div>
          <div class="min-w-0 flex-1">
            <p class="font-mono text-xs text-[var(--text-subtle)] mb-0 uppercase tracking-wider">Phone <span class="normal-case opacity-70">(tap to copy)</span></p>
            <p class="font-medium text-[var(--text-primary)] mb-0 text-sm">
              {profile.contact.phone}
            </p>
          </div>
          <span class="contact-copy-feedback font-mono text-xs text-[var(--accent)] hidden" aria-live="polite">Copied!</span>
        </button>

        <div class="pt-4 border-t-2 border-[var(--border-default)]">
          <p class="font-mono text-xs text-[var(--text-muted)] mb-3 uppercase tracking-wider">Connect</p>
          <div class="flex gap-3">
            <a
              href={profile.social.github}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2.5 border-2 border-[var(--border-default)] bg-[var(--bg-surface)] text-[var(--text-muted)] hover:text-[var(--accent)] hover:border-[var(--accent)] hover:shadow-[2px_2px_0_0_var(--accent)] transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--focus-ring)] focus-visible:ring-offset-2"
              aria-label="GitHub"
            >
              <Github size={18} aria-hidden="true" />
            </a>
            <a
              href={profile.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2.5 border-2 border-[var(--border-default)] bg-[var(--bg-surface)] text-[var(--text-muted)] hover:text-[var(--accent)] hover:border-[var(--accent)] hover:shadow-[2px_2px_0_0_var(--accent)] transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--focus-ring)] focus-visible:ring-offset-2"
              aria-label="LinkedIn"
            >
              <Linkedin size={18} aria-hidden="true" />
            </a>
          </div>
        </div>
      </div>

      <!-- Contact form (terminal-inspired) -->
      <div class="border-2 border-[var(--border-default)] bg-[var(--bg-surface)] p-4 sm:p-6">
        <!-- Terminal header bar -->
        <div class="flex items-center gap-2 pb-4 mb-4 border-b-2 border-[var(--border-default)]">
          <div class="flex gap-1.5" aria-hidden="true">
            <span class="w-2.5 h-2.5 bg-[var(--error)] inline-block"></span>
            <span class="w-2.5 h-2.5 bg-[var(--warning)] inline-block"></span>
            <span class="w-2.5 h-2.5 bg-[var(--success)] inline-block"></span>
          </div>
          <span class="font-mono text-xs text-[var(--text-subtle)] ml-2">contact.sh</span>
        </div>

        <form id="contact-form" class="space-y-4">
          <div>
            <label
              for="name"
              class="block font-mono text-xs text-[var(--text-muted)] mb-1.5 uppercase tracking-wider"
              >Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="c-input"
              placeholder="> Your name"
            />
          </div>
          <div>
            <label
              for="email"
              class="block font-mono text-xs text-[var(--text-muted)] mb-1.5 uppercase tracking-wider"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="c-input"
              placeholder="> your@email.com"
            />
          </div>
          <div>
            <label
              for="subject"
              class="block font-mono text-xs text-[var(--text-muted)] mb-1.5 uppercase tracking-wider"
              >Subject</label
            >
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="c-input"
              placeholder="> What's this about?"
            />
          </div>
          <div>
            <label
              for="message"
              class="block font-mono text-xs text-[var(--text-muted)] mb-1.5 uppercase tracking-wider"
              >Message</label
            >
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              class="c-input resize-none"
              placeholder="> Tell me about your project..."></textarea>
          </div>
          <button type="submit" class="c-btn c-btn-primary w-full h-11">
            Send message
          </button>
          <p
            id="form-status"
            class="font-mono text-xs text-[var(--text-muted)] text-center"
            aria-live="polite"
          >
          </p>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  // Copy email/phone on tap
  document.querySelectorAll(".contact-copy").forEach((btn) => {
    const el = btn as HTMLButtonElement;
    const value = el.getAttribute("data-copy");
    const feedback = el.querySelector(".contact-copy-feedback") as HTMLElement | null;
    if (!value || !feedback) return;
    el.addEventListener("click", async () => {
      try {
        await navigator.clipboard.writeText(value);
        feedback.classList.remove("hidden");
        feedback.textContent = "Copied!";
        feedback.classList.remove("text-[var(--error)]");
        setTimeout(() => {
          feedback.classList.add("hidden");
          feedback.textContent = "";
        }, 2000);
      } catch {
        feedback.classList.remove("hidden");
        feedback.textContent = "Copy failed";
        feedback.classList.add("text-[var(--error)]");
        setTimeout(() => {
          feedback.classList.add("hidden");
          feedback.textContent = "";
          feedback.classList.remove("text-[var(--error)]");
        }, 2000);
      }
    });
  });

  // Contact form — sends to kjdutaro@gmail.com via FormSubmit.co
  const form = document.getElementById("contact-form") as HTMLFormElement | null;
  const statusElement = document.getElementById("form-status");

  if (form && statusElement) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = {
        name: formData.get("name") as string,
        email: formData.get("email") as string,
        subject: formData.get("subject") as string,
        message: formData.get("message") as string,
      };

      try {
        statusElement.textContent = "> Sending...";
        statusElement.className =
          "font-mono text-xs text-[var(--text-muted)] text-center";

        const body = new URLSearchParams({
          name: data.name,
          email: data.email,
          subject: data.subject,
          message: data.message,
          _subject: data.subject,
          _template: "box",
          _captcha: "false",
        });
        const response = await fetch("https://formsubmit.co/ajax/kjdutaro@gmail.com", {
          method: "POST",
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: body.toString(),
        });

        if (response.ok) {
          statusElement.textContent =
            "> Message sent. I'll get back to you soon.";
          statusElement.className =
            "font-mono text-xs text-[var(--accent)] text-center";
          form.reset();
          setTimeout(() => {
            statusElement.textContent = "";
          }, 5000);
        } else {
          throw new Error("Failed to send");
        }
      } catch {
        statusElement.textContent =
          "> Error. Please copy my email above and send directly.";
        statusElement.className =
          "font-mono text-xs text-[var(--error)] text-center";
      }
    });
  }
</script>
