---
/**
 * Certifications â€” compact grid of professional credentials.
 * Pixel design with sharp edges and accent borders.
 */
import { getCollection } from "astro:content";
import CertificationBadge from "../ui/CertificationBadge.astro";

const certifications = await getCollection("certifications");
const sorted = certifications.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);
---

<section id="certifications" aria-label="Certifications" class="c-section">
  <div class="c-container">
    <p class="c-section-eyebrow">Credentials</p>
    <h2 class="c-section-title">Certifications</h2>
    <p class="c-section-desc">Professional certifications and credentials.</p>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"
    >
      {
        sorted.map((cert) => (
          <CertificationBadge
            title={cert.data.title}
            issuer={cert.data.issuer}
            date={cert.data.date}
            credentialUrl={cert.data.credentialUrl}
          />
        ))
      }
    </div>
  </div>
</section>
