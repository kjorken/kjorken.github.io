---
/**
 * BlogPreview â€” latest published blog posts with pixel styling.
 * Shows up to 3 posts, or a "coming soon" teaser if none are published.
 */
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
const published = posts
  .filter((p) => p.data.published !== false)
  .sort(
    (a, b) =>
      new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
  )
  .slice(0, 3);
---

<section id="blog" aria-label="Latest Writing" class="c-section">
  <div class="c-container">
    <p class="c-section-eyebrow">Blog</p>

    <div class="flex flex-wrap items-end justify-between gap-4 mb-10">
      <div>
        <h2 class="c-section-title">Latest Writing</h2>
        <p class="c-section-desc mb-0">
          Articles and insights about web development and modern technologies.
        </p>
      </div>
      <a
        href="/blog"
        class="c-link font-mono text-xs text-[var(--accent)] hover:text-[var(--accent-hover)] border border-transparent hover:border-[var(--border-default)] px-3 py-1.5"
      >
        View blog &rarr;
      </a>
    </div>

    {
      published.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
          {published.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="c-card block p-5 md:p-6 no-underline hover:no-underline group"
            >
              <time
                class="font-mono text-xs text-[var(--text-subtle)]"
                datetime={post.data.date.toISOString()}
              >
                {post.data.date.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                  day: "numeric",
                })}
              </time>
              <h3 class="font-heading font-semibold text-lg text-[var(--text-primary)] mt-2 mb-2 group-hover:text-[var(--accent)] transition-colors">
                {post.data.title}
              </h3>
              <p class="text-sm text-[var(--text-muted)] leading-relaxed mb-0">
                {post.data.description}
              </p>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-3">
                  {post.data.tags.map((tag) => (
                    <span class="font-mono text-xs px-2 py-0.5 bg-[var(--bg-elevated)] text-[var(--text-muted)] border border-[var(--border-default)]">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </a>
          ))}
        </div>
      ) : (
        <div class="c-card p-8 text-center">
          <div class="max-w-md mx-auto">
            <p class="font-heading text-xl font-semibold text-[var(--text-primary)] mb-3">
              Coming Soon
            </p>
            <p class="text-[var(--text-muted)] mb-0">
              I'm currently working on sharing my experiences and insights.
              Check back soon for new articles on web development, modern
              technologies, and best practices.
            </p>
          </div>
        </div>
      )
    }
  </div>
</section>
