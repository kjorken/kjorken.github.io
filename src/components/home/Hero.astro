---
/**
 * Hero â€” full-viewport introduction with pixel design.
 * Terminal cursor, CRT vignette overlay, pixel-border stat highlights.
 * All data from centralized profile.
 */
import { ArrowRight, Mail } from "@lucide/astro";
import profile from "../../data/profile";

/** Set to true to show highlight stats (Tourism Sites, Languages, WP Themes) */
const showHighlights = false;

---

<section
  id="hero"
  aria-label="Introduction"
  class="c-section relative flex items-center min-h-[calc(100vh-5rem)] overflow-hidden"
>
  <!-- CRT vignette overlay -->
  <div
    class="c-crt-vignette absolute inset-0 pointer-events-none"
    aria-hidden="true"
  >
  </div>

  <!-- Scanline overlay -->
  <div
    class="c-scanlines absolute inset-0 pointer-events-none"
    aria-hidden="true"
  >
  </div>

  <!-- Noise texture overlay -->
  <div
    class="c-noise absolute inset-0 pointer-events-none"
    aria-hidden="true"
  >
  </div>

  <div class="c-container relative z-10">
    <div class="max-w-3xl">
      <!-- Terminal-style eyebrow -->
      <p
        class="font-mono text-xs md:text-sm text-[var(--accent)] mb-4 tracking-wider"
        aria-hidden="true"
      >
        <span class="text-[var(--text-subtle)]">&gt;</span> {profile.title}<span
          class="animate-blink ml-0.5 text-[var(--accent)]">_</span
        >
      </p>

      <!-- Name: "Hi, I'm" unchanged; name only is bigger, responsive -->
      <h1
        class="font-pixel text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-normal text-[var(--text-primary)] leading-[1.3] mb-6"
      >
        Hi, I'm
        <span class="text-[var(--accent)] text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold block mt-2 md:whitespace-nowrap">
          {profile.name}
        </span>
      </h1>

      <!-- Tagline with terminal cursor -->
      <p
        class="text-base md:text-lg text-[var(--text-muted)] max-w-2xl leading-relaxed mb-10"
      >
        {profile.tagline}<span
          class="animate-blink ml-0.5 text-[var(--accent)] font-mono"
          aria-hidden="true">_</span>
      </p>

      <!-- CTAs (touch-friendly on mobile) -->
      <div class="flex flex-col sm:flex-row flex-wrap gap-3 mb-10 sm:mb-14">
        <a href="/#projects" class="c-btn c-btn-primary min-h-[44px] h-11 px-6">
          <ArrowRight size={18} aria-hidden="true" />
          View My Work
        </a>
        <a href="/#contact" class="c-btn c-btn-secondary min-h-[44px] h-11 px-6">
          <Mail size={18} aria-hidden="true" />
          Get In Touch
        </a>
      </div>

      {showHighlights && (
        <div class="flex flex-wrap gap-4 sm:gap-6">
          {
            profile.highlights.map((h) => (
              <div class="px-5 py-3 border-2 border-[var(--border-default)] bg-[var(--bg-surface)] hover:border-[var(--accent)] hover:shadow-[2px_2px_0_0_var(--accent)] transition-all">
                <p class="text-2xl md:text-3xl font-bold text-[var(--accent)] font-heading mb-0">
                  {h.value}
                </p>
                <p class="text-xs font-mono text-[var(--text-muted)] mb-0 uppercase tracking-wider">
                  {h.label}
                </p>
              </div>
            ))
          }
        </div>
      )}
    </div>
  </div>
</section>
