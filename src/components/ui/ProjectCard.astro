---
interface Props {
  title: string;
  description: string;
  tech?: string[];
  github?: string;
  liveLink?: string;
  image?: string;
  featured?: boolean;
  href?: string;
}

const { title, description, tech = [], github, liveLink, image, featured = false, href } = Astro.props;
const articleClass = `group flex flex-col gap-4 p-6 rounded-lg border transition-all ${featured ? 'border-l-4 border-l-[--accent-primary] border-[--border-primary] bg-[--bg-tertiary] hover:border-[--accent-primary] hover:bg-[--bg-secondary]' : 'border-[--border-primary] bg-[--bg-primary] hover:border-[--accent-primary] hover:bg-[--bg-secondary]'}`;
---

{href ? (
    <article class={articleClass}>
      <a href={href} class="no-underline">
      {image && (
        <div class="relative overflow-hidden rounded-md h-40 md:h-48 bg-zinc-800">
          <img 
            src={image} 
            alt={`${title} project screenshot`}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            loading="lazy"
          />
        </div>
      )}
      
      <div class="flex-1 flex flex-col gap-3">
        <div class="flex items-start justify-between gap-4">
          <h3 class="text-lg font-semibold text-zinc-100 leading-tight">{title}</h3>
          {featured && <span class="shrink-0 text-xs bg-[--accent-light] text-[--accent-dark] px-2.5 py-1 rounded-full font-medium whitespace-nowrap">Featured</span>}
        </div>
        
        <p class="text-neutral-700 dark:text-neutral-300 text-sm leading-relaxed">{description}</p>
        
        {tech.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-1">
            {tech.map((t: string) => (
              <span class="text-xs bg-[--bg-tertiary] text-[--accent-primary] px-2.5 py-1 rounded-full border border-[--accent-primary]">
                {t}
              </span>
            ))}
          </div>
        )}
      </div>
      </a>

      
      <div class="flex gap-3 pt-3 border-t border-[--border-primary]/50">
        {github && (
          <a 
            href={github} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-neutral-500 hover:text-[--accent-primary] transition-colors flex items-center gap-2 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-[--accent-primary] rounded px-2 py-1"
            aria-label={`View ${title} on GitHub`}
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
            </svg>
            Code
          </a>
        )}
        {liveLink && (
          <a 
            href={liveLink} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-neutral-500 hover:text-[--accent-primary] transition-colors flex items-center gap-2 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-[--accent-primary] rounded px-2 py-1"
            aria-label={`View ${title} live demo`}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            Demo
          </a>
        )}
      </div>
    </article>
) : (
  <article class={articleClass}>
    <a href={href} class="no-underline">
          {image && (
      <div class="relative overflow-hidden rounded-md h-40 md:h-48 bg-zinc-800">
        <img 
          src={image} 
          alt={`${title} project screenshot`}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          loading="lazy"
        />
      </div>
    )}
    
    <div class="flex-1 flex flex-col gap-3">
      <div class="flex items-start justify-between gap-4">
        <h3 class="text-lg font-semibold text-zinc-100 leading-tight">{title}</h3>
        {featured && <span class="shrink-0 text-xs bg-blue-900/40 text-blue-300 px-2.5 py-1 rounded-full font-medium whitespace-nowrap">Featured</span>}
      </div>
      
      <p class="text-zinc-300 text-sm leading-relaxed">{description}</p>
      
      {tech.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-1">
          {tech.map((t: string) => (
            <span class="text-xs bg-zinc-800 text-zinc-300 px-2.5 py-1 rounded-full border border-zinc-700">
              {t}
            </span>
          ))}
        </div>
      )}
    </div>
    
    <div class="flex gap-3 pt-3 border-t border-zinc-800/50">
      {github && (
        <a 
          href={github} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-zinc-400 hover:text-blue-400 transition-colors flex items-center gap-2 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-blue-500 rounded px-2 py-1"
          aria-label={`View ${title} on GitHub`}
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
            </svg>
            Code
          </a>
        )}
        {liveLink && (
          <a 
            href={liveLink} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-zinc-400 hover:text-blue-400 transition-colors flex items-center gap-2 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-blue-500 rounded px-2 py-1"
            aria-label={`View ${title} live demo`}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            Demo
          </a>
        )}
    </div>
    </a>
  </article>
)}