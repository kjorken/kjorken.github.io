---
interface Props {
  name: string;
  category?: string;
}

const { name, category } = Astro.props;
---

<span class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium bg-[var(--bg-elevated)] text-[var(--accent)] border border-[var(--border-default)] hover:border-[var(--accent)] hover:bg-[var(--accent-muted)] transition-colors">
  {name}
</span>
