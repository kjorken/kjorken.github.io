---
interface Props {
  name: string;
  category?: string;
}

const { name, category } = Astro.props;
---

<span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-[--bg-tertiary] text-[--accent-primary] border border-[--accent-primary] hover:bg-[--accent-light] hover:text-[--accent-dark] transition-colors">
  {name}
</span>
