---
interface Props {
  email?: string;
  phone?: string;
  github?: string;
  linkedin?: string;
}

const { 
  email = "kjdutaro@gmail.com",
  phone = "+63 956 179 3552",
  github = "https://github.com/kjdutaro",
  linkedin = "https://linkedin.com/in/kjdutaro"
} = Astro.props;
---

<section class="py-16 md:py-20 border-t border-zinc-800 px-4 md:px-8">
  <div class="max-w-2xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-4 text-zinc-100">Let's Connect</h2>
    <p class="text-zinc-300 mb-10 leading-relaxed">I'm always interested in hearing about new projects and opportunities. Feel free to reach out!</p>
    
    <div class="flex flex-col gap-6 items-center">
      <a 
        href="/contact"
        class="btn btn-primary inline-block"
      >
        Get In Touch
      </a>
      
      <div class="flex flex-wrap justify-center gap-8 pt-4">
        {phone && (
          <a 
            href={`tel:${phone}`}
            class="group flex flex-col items-center gap-2 text-neutral-500 hover:text-[--accent-primary] transition-colors"
            aria-label={`Call ${phone}`}
          >
            <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773c.26.559.934 1.42 2.853 3.339 1.92 1.919 2.78 2.592 3.339 2.853l.773-1.548a1 1 0 011.06-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2.206A13.993 13.993 0 012 3z"/>
            </svg>
            <span class="text-sm font-medium">Phone</span>
          </a>
        )}
        
        {github && (
          <a 
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex flex-col items-center gap-2 text-zinc-400 hover:text-blue-400 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 rounded px-2 py-1"
            aria-label="Visit GitHub profile"
          >
            <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
            </svg>
            <span class="text-sm font-medium">GitHub</span>
          </a>
        )}
        
        {linkedin && (
          <a 
            href={linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex flex-col items-center gap-2 text-zinc-400 hover:text-blue-400 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 rounded px-2 py-1"
            aria-label="Visit LinkedIn profile"
          >
            <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 6.518c.713 0 1.146-.435 1.146-1.01 0-.575-.433-1.01-1.147-1.01-.713 0-1.147.435-1.147 1.01 0 .575.434 1.01 1.147 1.01zm-1.006 4.084h2.01V9.36H3.937v2.388zm10.313-2.388h-2.01v1.194c0 .319.064.638.327.887.264.249.652.331 1.043.331.75 0 1.31-.531 1.31-1.414v-.998h2.01v1.894c0 2.351-1.194 3.565-2.942 3.565-1.194 0-2.351-.75-2.351-2.351v-2.696h2.01v1.327z"/>
            </svg>
            <span class="text-sm font-medium">LinkedIn</span>
          </a>
        )}
      </div>
    </div>
  </div>
</section>
