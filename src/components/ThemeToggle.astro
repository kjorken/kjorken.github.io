---
import { MoonIcon, SunIcon } from "@lucide/astro";
---

<button
    id="theme-toggle"
    class="rounded-md border px-3 py-2 text-sm hover:text-primary dark:hover:text-primary-foreground hover:bg-neutral-100 dark:hover:bg-neutral-800"
>
    <SunIcon class="icon-sun" />
    <MoonIcon class="icon-moon " />

</button>

<script >
    import { toggleTheme } from "../scripts/theme";


    document
        .getElementById("theme-toggle")
        ?.addEventListener("click", toggleTheme);
</script>

